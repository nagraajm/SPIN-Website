    <header class="header">
        <div class="container">
            <div class="logo">
                <img src="../images/spin_logo.webp" alt="SPIN Academics Logo" class="logo-img">
                <span class="logo-text">SPIN Academics</span>
            </div>
            <nav class="nav" role="navigation">
                <button class="nav-toggle" aria-label="Toggle navigation">
                    <span></span>
                    <span></span>
